root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.{kt,kts}]
ktlint_code_style = official
ktlint_ignore_back_ticked_identifier = true

[*.java]
ij_java_imports_layout = *,|,javax.**,java.**,|,$*
ij_java_use_single_class_imports = true